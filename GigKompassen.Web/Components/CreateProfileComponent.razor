@using GigKompassen.Enums
@using GigKompassen.Models.Profiles
@inherits CreateProfileComponentBase

@if (SelectedProfileType == ProfileTypes.Artist)
{
    <CreateArtistProfileComponent OnProfileCreated="HandleProfileCreated" />
}
else if (SelectedProfileType == ProfileTypes.Scene)
{
    <CreateSceneProfileComponent OnProfileCreated="HandleProfileCreated" />
}
else if (SelectedProfileType == ProfileTypes.Manager)
{
    <CreateManagerProfileComponent OnProfileCreated="HandleProfileCreated" />
}

@code {
    [Parameter]
    public ProfileTypes SelectedProfileType { get; set; }

    [Parameter]
    public EventCallback<BaseProfile> OnProfileCreated { get; set; }

    private async Task HandleProfileCreated(BaseProfile profile)
    {
        await OnProfileCreated.InvokeAsync(profile);
    }
}